<div class="row">
    <div class="col s12 m12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{this.post_title}}</span>
                <p>{{this.post_content}}</p>
                <p>Posted by {{this.user.name}} on {{format_date this.date_posted}}</p>
            </div>
            <div class="card-action">
                <a class="waves-effect waves-teal btn-flat" id="deletePostBTN" data-post="{{this.id}}" data-user="{{this.user_id}}">Delete</a>
                <a class="waves-effect waves-teal btn-flat" id="updatePostBTN" data-post="{{this.id}}" data-user="{{this.user_id}}">Update</a>
                <a class="waves-effect waves-teal btn-flat" id="replyPostBTN" data-post="{{this.id}}" href="/replyto/{{this.id}}">Reply</a>
            </div>
        </div>
    </div>
</div>
<br>
<div class="row">
    {{#each replies}}
        {{>reply}}
    {{/each}}
</div>
