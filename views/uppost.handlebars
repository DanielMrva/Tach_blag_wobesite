<div class="row">
    <div class="col s12 m12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{this.post_title}}</span>
                <p>{{this.post_content}}</p>
                <p>Posted by {{this.user.name}} on {{format_date this.date_posted}}</p>
            </div>
        </div>
    </div>
</div>
<br>

<div class="row">
    {{#each this.replies}}
        {{>reply-min}}
    {{/each}}
</div>
<div class="row">
  <div class="col s12 m12 center-align">
    <h3>Update Post:</h3>

    <form class="form update-post-form" data-post="{{this.id}}">
      <div class="form-group">
        <label for="update-post-title">Update Post Title:</label>
        <input class="form-input" type="text" id="update-post-title" name="update-post-title" />
      </div>
      <div class="form-group">
        <label for="update-post-content">Update Post Content:</label>
        <textarea class="form-input" id="update-post-content" name="update-post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>

</div>


<script src="/js/updatepost.js"></script>


