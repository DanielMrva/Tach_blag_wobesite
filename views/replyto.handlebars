<div class="row">
    <div class="col s12 m12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{this.post_title}}</span>
                <p>{{this.post_content}}</p>
                <p>Posted by {{this.user.name}} on {{format_date this.date_posted}}</p>
            </div>
        </div>
    </div>
</div>
<br>
<div class="row">
    {{#each replies}}
        {{>reply-min}}
    {{/each}}
</div>
<div class="row">
  <div class="col s12 m12 center-align">
    <h3>New Reply:</h3>

    <form class="form new-reply-form"  data-post="{{this.id}}">
      <div class="form-group">
        <label for="reply-content">Reply Content:</label>
        <textarea class="form-input" id="reply-content" name="reply-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Reply</button>
      </div>
    </form>
  </div>

</div>

<script src="/js/reply.js"></script>


