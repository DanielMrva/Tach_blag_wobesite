<div class="row">
    <div class="col s12 m12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{this.post.post_title}}</span>
                <p>{{this.post.post_content}}</p>
                <p>Posted by {{this.post.user.name}} on {{format_date this.post.date_posted}}</p>
            </div>
        </div>
    </div>
</div>
<br>

<div class="row">
    {{#each this.post.replies}}
        {{>reply-min}}
    {{/each}}
</div>
<div class="row">
  <div class="col s12 m12 center-align">
    <h3>Update Reply:</h3>

    <form class="form update-reply-form"  data-reply="{{this.id}}">
      <div class="form-group">
        <label for="update-reply-content">Updated Reply Content:</label>
        <textarea class="form-input" id="update-reply-content" name="update-reply-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>

</div>


<script src="/js/updatereply.js"></script>


